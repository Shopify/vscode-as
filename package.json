{
  "name": "asls",
  "displayName": "AssemblyScript for VSCode",
  "description": "AssemblyScript Language Client implementation for VSCode",
  "version": "0.4.0",
  "icon": "as.png",
  "galleryBanner": {
    "color": "#0DA2FF",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.53.0"
  },
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:assemblyscript"
  ],
  "main": "./out/extension.js",
  "publisher": "saulecabrera",
  "repository": "https://github.com/Shopify/vscode-as",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "AssemblyScript",
      "properties": {
        "asls.maxNumberOfProblems": {
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "asls.traceLevel": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "on",
          "description": "Traces the communication between VSCode and the AssemblyScript language server"
        },
        "asls.include": {
          "description": "AssemblyScript sources to analyze",
          "type": "array",
          "default": [
            "assembly/**/*.ts",
            "assembly/*.ts"
          ]
        },
        "asls.port": {
          "description": "Port in which the language server will be listening",
          "type": "number",
          "default": 0
        },
        "asls.debug": {
          "description": "Start the language server in debug mode",
          "type": "boolean",
          "default": false
        }
      }
    },
    "languages": [
      {
        "id": "assemblyscript",
        "aliases": [
          "AssemblyScript",
          "assemblyscript"
        ],
        "extensions": [
          ".as"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "assemblyscript",
        "scopeName": "source.as",
        "path": "./syntaxes/assemblyscript.json"
      }
    ],
    "typescriptServerPlugins": [
      {
        "name": "asts",
        "enableForWorkspaceTypeScriptVersions": true
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "lint": "eslint src --ext ts",
    "watch": "tsc -b -w",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.13",
    "@types/node": "^13.13.15",
    "@types/semver": "^7.3.3",
    "@types/shelljs": "^0.8.8",
    "@types/tar": "^4.0.4",
    "@types/vscode": "^1.53.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "jest": "^26.4.2",
    "typescript": "^4.1.5",
    "vsce": "^1.88.0",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "asts": "./asts",
    "cross-spawn": "^7.0.3",
    "purify-ts": "^0.16.0-beta.5",
    "semver": "^7.3.2",
    "shelljs": "^0.8.5",
    "tar": "^6.1.0",
    "vscode-languageclient": "^7.0.0"
  }
}
